@using SiteSettings;
@inherits LayoutComponentBase

<MudThemeProvider Theme="SiteSettings.currentTheme"/>
<MudDialogProvider />
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudBadge Content="2" Color="Color.Primary" Overlap=true Class="mx-6 my-4">
            <MudIconButton Icon="@Icons.Material.Filled.Notifications" Color="Color.Inherit" />
        </MudBadge>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/10100programer/LunchMaster" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true">
        <MudDrawerHeader>
            <MudIcon Icon="@Icons.Rounded.NextPlan" Class="app-drawer-icon"/>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @if(SiteSettings.IsDeveloperMode)
        {
            <MudAlert Severity="Severity.Warning" Variant="Variant.Filled">This is currently in development features may change or dissapear without notice</MudAlert>
        }
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-4 pt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}